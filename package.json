{
  "name": "magic-mirror",
  "version": "1.3.2",
  "description": "GitHub App that syncs upstream repositories with forks using PRs",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "npx tsc",
    "lint": "eslint src --ext .ts",
    "dev": "npm run build && touch magic-mirror.db && concurrently npm:syncer npm:web -n syncer,web -c green,blue",
    "syncer": "node ./build/scripts/start-syncer.js",
    "web": "node ./build/scripts/start-web.js",
    "test": "jest --runInBand ./src"
  },
  "author": "Red Hat",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@octokit/auth-app": "^8.1.2",
    "@octokit/openapi-types": "^27.0.0",
    "@octokit/rest": "^22.0.1",
    "@octokit/webhooks-types": "^7.6.1",
    "probot": "^14.2.4",
    "simple-git": "^3.30.0",
    "sqlite3": "^5.1.7",
    "tmp": "^0.2.5",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@tsconfig/node20": "^20.1.8",
    "@types/jest": "^30.0.0",
    "@types/sqlite3": "^5.1.0",
    "@types/supertest": "^6.0.2",
    "@types/tmp": "^0.2.6",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "nock": "^14.0.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    }
  }
}

{
  "name": "magic-mirror",
  "version": "1.0.0",
  "description": "GitHub App that syncs upstream repositories with forks using PRs",
  "scripts": {
    "build": "npx tsc",
    "lint": "eslint src --ext .ts",
    "dev": "npm run build && touch magic-mirror.db && concurrently npm:syncer npm:web -n syncer,web -c green,blue",
    "syncer": "node ./build/scripts/start-syncer.js",
    "web": "node ./build/scripts/start-web.js",
    "test": "jest --runInBand ./src"
  },
  "author": "Red Hat",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@octokit/auth-app": "^6.1.0",
    "@octokit/openapi-types": "^21.2.0",
    "@octokit/rest": "^20.1.0",
    "@octokit/webhooks-types": "^7.5.0",
    "@types/js-yaml": "^4.0.9",
    "probot": "^13.2.0",
    "simple-git": "^3.24.0",
    "sqlite3": "^5.1.7",
    "tmp": "^0.2.3",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-typescript": "^7.24.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/jest": "^29.5.12",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.2",
    "@types/tmp": "^0.2.6",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "nock": "^13.5.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.4"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    }
  }
}
